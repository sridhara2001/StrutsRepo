<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.dtd">
<validators>
    <field name="student.name">
        <field-validator type="requiredstring">
            <message>Name is required</message>
        </field-validator>
    </field>
    
    <field name="student.age">
        <field-validator type="int">
        <param name="min">20</param>
        <param name="70">70</param>
            <message>Age should be between 20 and 70</message>
        </field-validator>
    </field>
    
     <field name="student.city">
        <field-validator type="requiredstring">
            <message>City is required</message>
        </field-validator>
    </field>
     <field name="student.email">
        <field-validator type="requiredstring">
            <message>Email is required</message>
        </field-validator>
    </field>
     <field name="student.email">
        <field-validator type="email">
            <message>Email is not valid</message>
        </field-validator>
    </field>
     <field name="student.stipend">
        <field-validator type="double">
        <param name="minInclusive">500</param>
            <message>Stipend is greater than 500</message>
        </field-validator>
    </field>
     <field name="student.course">
        <field-validator type="requiredstring">
            <message>Course is required</message>
        </field-validator>
    </field>
     <field name="student.hobby">
        <field-validator type="requiredstring">
            <message>Hobby is required</message>
        </field-validator>
    </field>
     <field name="student.radio">
        <field-validator type="requiredstring">
            <message>Gender is required</message>
        </field-validator>
    </field>
</validators>